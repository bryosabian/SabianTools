<?xml version="1.0" encoding="utf-8"?>
<!--Header-->
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:sabian="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"

        >
        <View
            android:layout_width="50dp"
            android:layout_height="1dp"
            android:background="@color/sabian_divider_color_light"
            android:layout_marginTop="8dp"
            android:layout_marginRight="3dp"
            android:id="@+id/v_DividerLeft"


            />
        <!--Title-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ll_SabianHeaderBannerIconsLeft"
                android:orientation="horizontal"
                android:paddingTop="3dp"
                >

            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/sabian_font_color_black"
                android:textSize="14sp"
                android:text="Featured Products"
                android:id="@+id/txt_SabianHederBanner"

                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ll_SabianHeaderBannerIconsRight"
                android:orientation="horizontal"
                android:paddingTop="3dp"
                >
                </LinearLayout>

        </LinearLayout>
        <!--TitleEnd-->

        <View
            android:layout_width="50dp"
            android:layout_height="1dp"
            android:background="@color/sabian_divider_color_light"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="3dp"
            android:id="@+id/v_DividerRight"


            />

    </LinearLayout>

