<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sabian="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_ViewHoldermodalContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="15dp"
    android:paddingTop="@dimen/sabian_modal_list_padding"
    android:paddingRight="15dp"
    android:paddingBottom="@dimen/sabian_modal_list_padding">

    <RelativeLayout
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/img_ViewHoldermodalImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ProgressBar
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerInParent="true"
            android:visibility="gone" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.sabiantools.controls.texts.SabianCondensedText
                android:id="@+id/sct_ViewHoldermodalTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text=""
                android:textColor="?attr/sabianModalTextColor"
                android:textSize="15sp"
                sabian:SabianRobotoType="Regular" />

            <com.sabiantools.controls.texts.SabianCondensedText
                android:id="@+id/sct_ViewHoldermodalSubTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="3dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="?attr/sabianModalTextColor"
                android:textSize="12sp"
                android:visibility="gone"
                sabian:SabianRobotoType="Bold" />
        </LinearLayout>

        <com.beardedhen.androidbootstrap.FontAwesomeText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:textColor="?attr/sabianModalTextColor"
            android:textSize="16sp"
            android:visibility="gone"
            sabian:fa_icon="fa-chevron-right" />
    </RelativeLayout>

</LinearLayout>