<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sabian="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rll_SabianActionBarContainer"
    >

    <TextView
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        style="@android:style/TextAppearance.DeviceDefault.Widget.ActionBar.Title"
        android:text="@string/app_name"
        android:layout_alignParentLeft="true"
        android:textColor="@color/sabian_actionbar_text_color"
        android:textSize="18sp"
        android:id="@+id/txt_SabianActionBarTitle"
        android:ellipsize="end"
        android:singleLine="true"


        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentRight="true"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="-26dp"

            >
            <com.beardedhen.androidbootstrap.FontAwesomeText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                sabian:fa_icon="fa-angle-left"
                android:textColor="@color/sabian_actionbar_text_color"
                android:textSize="21sp"
                android:textStyle="bold"
                android:visibility="gone"
                />
        </LinearLayout>






    </LinearLayout>

</RelativeLayout>

